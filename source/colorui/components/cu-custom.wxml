<view class="cu-custom" style="height:{{CustomBar}}px">
  <view class="cu-bar fixed {{bgImage!=''?'none-bg text-white bg-img':''}} {{bgColor}}" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;{{bgImage?'background-image:url(' + bgImage+')':''}}">
    <view class="action" bindtap="BackPage" wx:if="{{isBack}}">
      <text class="cuIcon-back"></text>
      <slot name="backText"></slot>
    </view>

    <view class="action border-custom" wx:if="{{isCustom}}" style="width:{{Custom.width}}px;height:{{Custom.height}}px;margin-left:calc(750rpx - {{Custom.right}}px)">
      <text class="cuIcon-back" bindtap="BackPage"></text>
      <text class="cuIcon-homefill" bindtap="toHome"></text>
    </view>
    <view wx:if="{{isCheck}}" class="action">
      <text class="cuIcon-weibo text-white "></text>
      <image src='../../images/camera.png' mode='aspectFill' class='back-pre'></image>
      <view class="text-white"></view>
    </view>
    <view wx:if="{{isWeibo}}" class="action" style="width:{{Custom.width}}px;height:{{Custom.height}}px;margin-left:calc(750rpx - {{Custom.right}}px)">
      <!-- <text class="cuIcon-creative" bindtap="BackPage"></text> -->
       <!-- <text class="cuIcon-settings" bindtap="BackPage"></text> -->
       <view class="calendar">
        <view class="day">{{day}}</view>
       </view>
    </view>
    <view class="content" style="top:{{StatusBar}}px">
      <slot name="content"></slot>
    </view>
    <slot name="right"></slot>
  </view>
</view>